<?xml version="1.0"?>

<fragment>
 <extension target="application#MODULE">
  <module>
   <java>${bundle.fileName}</java>
  </module>
 </extension>

 <install>
  <delete path="${bundle.fileName}.tmp" />
  <!-- create a temporary directory -->
  <unzip from="${bundle.fileName}" to="${bundle.fileName}.tmp">
   <include>web/nuxeo.war/**</include>
   <include>l10n/**</include>
  </unzip>
  <!-- be sure no directory with that name exists -->
  <copy from="${bundle.fileName}.tmp/web/nuxeo.war" to="/" prefix="web" />
  <append from="${bundle.fileName}.tmp/l10n/messages_en.properties"
   to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
  <append from="${bundle.fileName}.tmp/l10n/messages_fr.properties"
   to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
  <append from="${bundle.fileName}.tmp/l10n/messages.properties"
   to="nuxeo.war/WEB-INF/classes/messages.properties" addNewLine="true" />
 </install>


 <extension target="faces-config#NAVIGATION">
  <navigation-case>
   <from-outcome>edit_certificate</from-outcome>
   <to-view-id>/edit_user_certificate.xhtml</to-view-id>
   <redirect />
  </navigation-case>
  <navigation-case>
   <from-outcome>sign_view</from-outcome>
   <to-view-id>/sign_view.xhtml</to-view-id>
   <redirect />
  </navigation-case>
 </extension>

</fragment>
