<package type="addon" name="nuxeo-signature" version="@VERSION@">
  <title>Digital Signature</title>
  <description>
    <p>The Digital Signature addon introduces PDF signing capabilities to the Nuxeo Platform following asymmetric cryptography, PKI and the X.509 standards. This addon also provides generation of user certificates stored server-side, which are required for document signing.</p>
  </description>
  <home-page>https://doc.nuxeo.com/nxdoc/digital-signature/</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <!-- <hotreload-support>false</hotreload-support> -->
  <!-- <require-terms-and-conditions-acceptance>false -->
  <!-- </require-terms-and-conditions-acceptance> -->
  <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>false</supported>
  <platforms>
    <platform>server-@DISTRIB_VERSION@</platform>
    <platform>server-@DISTRIB_VERSION@-*</platform>
  </platforms>
  <optional-dependencies>
    <package>nuxeo-jsf-ui</package>
  </optional-dependencies>
  <license>LGPL</license>
  <license-url>http://www.gnu.org/licenses/lgpl.html</license-url>
  <visibility>MARKETPLACE</visibility>
</package>
